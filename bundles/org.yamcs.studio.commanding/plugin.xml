<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.services">   
      <sourceProvider provider="org.yamcs.studio.commanding.stack.CommandStackStateProvider">
         <variable name="org.yamcs.studio.commanding.stack.state.remaining" priorityLevel="workbench" />
         <variable name="org.yamcs.studio.commanding.stack.state.armed" priorityLevel="workbench" />
         <variable name="org.yamcs.studio.commanding.stack.state.empty" priorityLevel="workbench" />
         <variable name="org.yamcs.studio.commanding.stack.state.executionStarted" priorityLevel="workbench" />
      </sourceProvider>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.yamcs.studio"
            name="Yamcs">
      </category>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.add"
            name="New Command">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.delete"
            name="Delete Command">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.deleteAll"
            name="Delete All Commands">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.skip"
            name="Skip Command">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.restart"
            name="Clear Execution State">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.arm"
            name="Arm Command">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.armAll"
            name="Arm All Commands">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.issue"
            name="Issue Command">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.issueAll"
            name="Issue All Commands">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.export"
            name="Export Stack">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.exportSpell"
            name="Export Stack to SPELL procedure...">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.import"
            name="Import a Stack">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.stack.saveToYamcs"
            name="Save to Yamcs">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.clearCommand" 
            name="Clear View">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.scrollLockCommand" 
            name="Scroll Lock">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:false"
               id="org.eclipse.ui.commands.toggleState" />
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.exportCommand"
            name="Export Commands to CSV">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.importCommand"
            name="Fetch Commands">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand"
            name="Copy Command Details">
         <commandParameter
               id="org.yamcs.studio.commanding.cmdhist.copyDetails.property"
               name="Property"
               optional="false" />
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.addCommentCommand"
            name="Add Comment">
      </command>
      <command
            categoryId="org.yamcs.studio"
            id="org.yamcs.studio.commanding.cmdhist.showDetailsCommand"
            name="Command History Entry Properties">
      </command>
   </extension>
   
   <extension point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
         namespace="org.yamcs.studio.commanding.stack"
         class="org.yamcs.studio.commanding.stack.StackedCommandPropertyTester"
         id="org.yamcs.studio.commanding.stack.StackedCommandPropertyTester"
         properties="canBeSkipped"
         type="org.yamcs.studio.commanding.stack.StackedCommand" />
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="org.yamcs.studio.commanding.stack.AddToStackHandler"
            commandId="org.yamcs.studio.commanding.stack.add">
         <activeWhen>
            <and>
               <with variable="org.yamcs.studio.ui.state.connected">
                  <equals value="true"/>
               </with>
               <with variable="org.yamcs.studio.ui.authorization.mayCommandPayload">
                  <equals value="true"/> 
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.DeleteHandler"
            commandId="org.yamcs.studio.commanding.stack.delete">
         <enabledWhen>
            <with variable="selection">
               <and>
                  <iterate ifEmpty="false">
                     <instanceof value="org.yamcs.studio.commanding.stack.StackedCommand"/>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.DeleteAllHandler"
            commandId="org.yamcs.studio.commanding.stack.deleteAll">
         <enabledWhen>
            <with variable="org.yamcs.studio.commanding.stack.state.empty">
               <not>
                  <equals value="true"/>
               </not>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.RestartHandler"
            commandId="org.yamcs.studio.commanding.stack.restart">
         <enabledWhen>
            <with variable="org.yamcs.studio.commanding.stack.state.executionStarted">
               <equals value="true"/>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.SkipHandler"
            commandId="org.yamcs.studio.commanding.stack.skip">
         <enabledWhen>
            <and>
               <with variable="org.yamcs.studio.commanding.stack.state.remaining">
                  <equals value="true"/>
               </with>
               <with variable="selection">
                  <and>
                     <count value="1" />
                     <iterate ifEmpty="false">
                        <adapt type="org.yamcs.studio.commanding.stack.StackedCommand">
                           <test property="org.yamcs.studio.commanding.stack.canBeSkipped" />
                        </adapt>
                     </iterate>
                  </and>
               </with>
            </and>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.ArmCommandHandler"
            commandId="org.yamcs.studio.commanding.stack.arm">
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.ArmAllCommandHandler"
            commandId="org.yamcs.studio.commanding.stack.armAll">
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.IssueCommandHandler"
            commandId="org.yamcs.studio.commanding.stack.issue">
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.IssueAllCommandsHandler"
            commandId="org.yamcs.studio.commanding.stack.issueAll">
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.ExportCommandStackHandler"
            commandId="org.yamcs.studio.commanding.stack.export">
         <activeWhen>
            <and>
               <with variable="org.yamcs.studio.commanding.stack.state.remaining">
                  <equals value="true"/>
               </with>
               <with variable="org.yamcs.studio.ui.authorization.mayCommandPayload">
                  <equals value="true"/>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.ExportCommandStackHandlerSpell"
            commandId="org.yamcs.studio.commanding.stack.exportSpell">
         <activeWhen>
            <and>
               <with variable="org.yamcs.studio.commanding.stack.state.remaining">
                  <equals value="true"/>
               </with>
               <with variable="org.yamcs.studio.ui.authorization.mayCommandPayload">
                  <equals value="true"/>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.SaveStackToYamcsHandler"
            commandId="org.yamcs.studio.commanding.stack.saveToYamcs">
         <activeWhen>
            <and>
               <with variable="org.yamcs.studio.commanding.stack.state.remaining">
                  <equals value="true"/>
               </with>
               <with variable="org.yamcs.studio.ui.authorization.mayCommandPayload">
                  <equals value="true"/>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.stack.ImportCommandStackHandler"
            commandId="org.yamcs.studio.commanding.stack.import">
         <activeWhen>
            <and>
               <with variable="org.yamcs.studio.ui.state.connected">
                  <equals value="true"/>
               </with>
               <with variable="org.yamcs.studio.ui.authorization.mayCommandPayload">
                  <equals value="true"/>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.ClearCommandHistoryHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.clearCommand">
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.ScrollLockHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.scrollLockCommand">
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.ExportCommandsHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.exportCommand">        
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.ImportCommandsHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.importCommand">
         <activeWhen>
            <with variable="org.yamcs.studio.ui.state.connected">
               <equals value="true"/>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.AddCommentHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.addCommentCommand">
         <enabledWhen>
            <not>
               <count value="0"/>
            </not>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.CopyCommandHistoryEntryHandler"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
            <with variable="activePartId">
               <equals value="org.yamcs.studio.commanding.cmdhist.CommandHistoryView"/>
            </with>
         </activeWhen>
         <enabledWhen>
            <not>
               <count value="0"/>
            </not>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.CopyCommandHistoryEntryDetailsHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand">
         <enabledWhen>
            <not>
               <count value="0"/>
            </not>
         </enabledWhen>
      </handler>
      <handler
            class="org.yamcs.studio.commanding.cmdhist.ShowCommandHistoryEntryDetailsHandler"
            commandId="org.yamcs.studio.commanding.cmdhist.showDetailsCommand">
         <enabledWhen>
            <not>
               <count value="0"/>
            </not>
         </enabledWhen>
      </handler>
   </extension>
   
   <extension point="org.eclipse.ui.views">
      <category
      		name="Yamcs Server"
      		id="org.yamcs.studio.server">
      </category>
      <view
            category="org.yamcs.studio.server"
            class="org.yamcs.studio.commanding.cmdhist.CommandHistoryView"
            icon="icons/eview16/tc.png"
            id="org.yamcs.studio.commanding.cmdhist.CommandHistoryView"
            name="Command History"/>
      <view
            category="org.yamcs.studio.server"
            class="org.yamcs.studio.commanding.stack.CommandStackView"
            icon="icons/eview16/tc_add.png"
            id="org.yamcs.studio.commanding.stack.CommandStackView"
            name="Command Stack"/>
   </extension>

   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="toolbar:org.yamcs.studio.commanding.stack.CommandStackView">
         <command
               id="org.yamcs.studio.commanding.stack.exportDropdown"
               commandId="org.yamcs.studio.commanding.stack.export"
               icon="icons/elcl16/export_log.png"
               disabledIcon="icons/dlcl16/export_log.png"
               label="Export Stack"
               style="pulldown"/>
         <command
               commandId="org.yamcs.studio.commanding.stack.import"
               icon="icons/elcl16/import_log.png"
               disabledIcon="icons/dlcl16/import_log.png"
               label="Import a Stack"
               style="push"/>
         <control class="org.yamcs.studio.core.ui.utils.ToolbarSpacer"/>
         <command
               commandId="org.yamcs.studio.commanding.stack.add"
               icon="icons/elcl16/new_command.png"
               disabledIcon="icons/dlcl16/new_command.png"
               label="New Command"
               style="push"/>
         <command
               commandId="org.yamcs.studio.commanding.stack.delete"
               icon="icons/elcl16/remove.png"
               disabledIcon="icons/dlcl16/remove.png"
               label="Delete Command"
               style="push"/>
         <command
               commandId="org.yamcs.studio.commanding.stack.deleteAll"
               icon="icons/elcl16/removeall.png"
               disabledIcon="icons/dlcl16/removeall.png"
               label="Delete All Commands"
               style="push"/>
         <control class="org.yamcs.studio.core.ui.utils.ToolbarSpacer"/>
         <command
               commandId="org.yamcs.studio.commanding.stack.skip"
               icon="icons/elcl16/stepover_co.png"
               disabledIcon="icons/dlcl16/stepover_co.png"
               label="Skip Command"
               style="push"/>
         <command
               commandId="org.yamcs.studio.commanding.stack.restart"
               icon="icons/elcl16/restart_co.png"
               disabledIcon="icons/dlcl16/restart_co.png"
               label="Clear Execution State"
               style="push"/>
         <control class="org.yamcs.studio.core.ui.utils.ToolbarSpacer"/>
      </menuContribution>
      
       <menuContribution
             locationURI="menu:org.yamcs.studio.commanding.stack.exportDropdown">
          <command
                commandId="org.yamcs.studio.commanding.stack.export"
                icon="icons/elcl16/export_log.png"
                disabledIcon="icons/dlcl16/export_log.png"
                label="Export to XML..."
                style="push"/>
          <command
                commandId="org.yamcs.studio.commanding.stack.exportSpell"
                icon="icons/elcl16/export_log.png"
                disabledIcon="icons/dlcl16/export_log.png"
                label="Export to SPELL procedure..."
                style="push"/>
          <separator name="org.yamcs.studio.commanding.stack.separator1" visible="true"/>
          <command
                commandId="org.yamcs.studio.commanding.stack.saveToYamcs"
                label="Save to Yamcs..."
                style="push"/>
      </menuContribution>
      
      <menuContribution locationURI="toolbar:org.yamcs.studio.commanding.cmdhist.CommandHistoryView">
         <command
               commandId="org.yamcs.studio.commanding.cmdhist.exportCommand"
               icon="icons/elcl16/export_log.png"
               disabledIcon="icons/dlcl16/export_log.png"
               label="Export Commands to CSV"
               style="push"/>
         <control class="org.yamcs.studio.core.ui.utils.ToolbarSpacer"/>
         <command
               commandId="org.yamcs.studio.commanding.cmdhist.clearCommand"
               icon="icons/elcl16/clear.png"
               disabledIcon="icons/dlcl16/clear.png"
               label="Clear View"
               style="push"/>
         <command
               commandId="org.yamcs.studio.commanding.cmdhist.scrollLockCommand"
               icon="icons/elcl16/lock_co.png"
               disabledIcon="icons/dlcl16/lock_co.png"
               label="Scroll Lock"
               style="toggle"/>
         <command
               commandId="org.yamcs.studio.commanding.cmdhist.importCommand"
               icon="icons/obj16/fetch.png"
               label="Fetch Commands"
               style="push"/>
      </menuContribution>
      
      <menuContribution locationURI="popup:org.yamcs.studio.commanding.cmdhist.CommandHistoryView">
         <command
               commandId="org.yamcs.studio.commanding.cmdhist.showDetailsCommand"
               label="Properties"/>
         <command
               commandId="org.yamcs.studio.commanding.cmdhist.addCommentCommand"
               icon="icons/obj16/note.png"
               label="Add Comment"/>
         <separator name="org.yamcs.studio.commanding.cmdhist.separator1" visible="true"/>
         <command
               commandId="org.eclipse.ui.edit.copy"
               icon="icons/etool16/copy_edit.gif"
               disabledIcon="icons/dtool16/copy_edit.gif"/>
         <menu
               id="org.yamcs.studio.commanding.cmdhist.copyDetails.menu"
               label="Copy Details">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <not>
                     <count value="0"/>
                  </not>   
               </with>
            </visibleWhen>
            <command
                  commandId="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand"
                  label="Generation Time">
               <parameter
                     name="org.yamcs.studio.commanding.cmdhist.copyDetails.property" value="GENTIME" />
            </command>
            <command
                  commandId="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand"
                  label="Command">
               <parameter
                     name="org.yamcs.studio.commanding.cmdhist.copyDetails.property" value="COMMAND" />
            </command>
            <command
                  commandId="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand"
                  label="Source">
               <parameter
                     name="org.yamcs.studio.commanding.cmdhist.copyDetails.property" value="SOURCE" />
            </command>
            <command
                  commandId="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand"
                  label="Sequence Number">
               <parameter
                     name="org.yamcs.studio.commanding.cmdhist.copyDetails.property" value="SEQNO" />
            </command>
            <command
                  commandId="org.yamcs.studio.commanding.cmdhist.copyDetailsCommand"
                  label="Binary">
               <parameter
                     name="org.yamcs.studio.commanding.cmdhist.copyDetails.property" value="BIN" />
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
