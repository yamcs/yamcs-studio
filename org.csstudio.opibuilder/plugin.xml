<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="widget" name="Widget" schema="schema/widget.exsd"/>
   <extension-point id="graphicalFeedbackFactory" name="graphicalFeedbackFactory" schema="schema/graphicalFeedbackFactory.exsd"/>
   <extension
         point="org.eclipse.ui.perspectives">

      <perspective
            class="org.csstudio.opibuilder.runmode.OPIRunnerPerspective"
            icon="icons/OPIBuilder.png"
            id="org.csstudio.opibuilder.OPIRuntime.perspective"
            name="Display Runner">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="org.csstudio.utility.singlesource.PathEditorInputFactory"
            id="org.csstudio.utility.singlesource.PathEditorInputFactory">
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.views"
            description="Enter/Exit Full Screen"
            id="org.csstudio.opibuilder.actions.fullscreen"
            name="Full Screen">
      </command>
      <command
            categoryId="org.eclipse.ui.category.views"
            description="Send PV name to OPI Probe "
            id="org.csstudio.opibuilder.commands.openopiprobe"
            name="Open OPI Probe">
      </command>
      <command
            categoryId="org.eclipse.ui.category.views"
            defaultHandler="org.csstudio.opibuilder.actions.OpenOPIProbeHandler"
            id="org.csstudio.opibuilder.openProbeOPI"
            name="OPI Probe">
      </command>
      <command
            categoryId="org.eclipse.ui.category.views"
            defaultHandler="org.csstudio.opibuilder.actions.RefreshAllDisplaysHandler"
            id="org.csstudio.opibuilder.refreshAllDisplays"
            name="Refresh All Displays">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <scheme
            description="OPIBuilder Key Binding Scheme"
            id="org.csstudio.opibuilder.keybinding.scheme"
            name="OPIBuilderKeyBindingScheme">
      </scheme>
      <key
            commandId="org.csstudio.opibuilder.actions.fullscreen"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F11">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.csstudio.opibuilder.preferences.OPIColorsPreferencePage"
            id="org.csstudio.opibuilder.preferences.colors"
            name="OPI Colors">
      </page>
      <page
            class="org.csstudio.opibuilder.preferences.OPIFontsPreferencePage"
            id="org.csstudio.opibuilder.preferences.fonts"
            name="OPI Fonts">
      </page>
      <page
            class="org.csstudio.opibuilder.preferences.OPIRuntimePreferencePage"
            id="org.csstudio.opibuilder.preferences.runtime"
            name="OPI Runtime">
      </page>
      <page
            class="org.csstudio.opibuilder.preferences.ProbePreferencePage"
            id="org.csstudio.opibuilder.preferences.probe"
            name="Probe">
      </page>
      <page
            class="com.windhoverlabs.studio.registry.preferences.RegistryPreferencePage"
            id="com.windhoverlabs.studio.registry.preferences.RegistryPreferencePage"
            name="Registry">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.csstudio.opibuilder.actionSet"
            label="OPI Actions"
            visible="true">
         <action
               class="org.csstudio.opibuilder.actions.FullScreenAction"
               definitionId="org.csstudio.opibuilder.actions.fullscreen"
               id="org.csstudio.opibuilder.fullScreenAction"
               label="Full Screen"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
      <toc
            file="tocChangelog.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="org.csstudio.opibuilder.runmode.RunnerInputFactory"
            id="org.csstudio.opibuilder.runmode.RunnerInputFactory">
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.csstudio.opibuilder.showMacros"
            objectClass="org.csstudio.opibuilder.editparts.AbstractBaseEditPart">
         <action
               class="org.csstudio.opibuilder.actions.ShowMacrosAction"
               enablesFor="1"
               icon="icons/macro.png"
               id="org.csstudio.opibuilder.showMacrosAction"
               label="Show Macros"
               menubarPath="org.eclipse.gef.group.edit"
               tooltip="Show macros on selected widget">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.csstudio.opibuilder.rerouteConnection"
            objectClass="org.csstudio.opibuilder.editparts.WidgetConnectionEditPart">
         <action
               class="org.csstudio.opibuilder.actions.RerouteConnectionAction"
               enablesFor="1"
               icon="icons/reroute.gif"
               id="org.csstudio.opibuilder.RerouteAction"
               label="Reroute Connection">
         </action>
         <visibility>
            <objectState
                  name="executionMode"
                  value="EDIT_MODE">
            </objectState>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.csstudio.opibuilder.dumpPVList"
            objectClass="org.csstudio.opibuilder.editparts.AbstractBaseEditPart">
         <action
               class="org.csstudio.opibuilder.actions.DumpPVListAction"
               enablesFor="1"
               id="org.csstudio.opibuilder.DumpPVListAction"
               label="Dump PV List"
               menubarPath="org.eclipse.gef.group.edit"
               tooltip="Dump all PVs in the OPI.">
         </action>
         <visibility>
            <objectState
                  name="executionMode"
                  value="RUN_MODE">
            </objectState>
         </visibility>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.help.index">
      <index
            file="index.xml">
      </index>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="OPIContextHelp.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio.opibuilder.views"
            name="OPI">
      </category>
      <view
            allowMultiple="true"
            category="org.csstudio.opibuilder.views"
            class="org.csstudio.opibuilder.runmode.OPIView"
            fastViewWidthRatio="0.3"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.opiView"
            name="OPI View">
      </view>
      <view
            allowMultiple="true"
            category="org.csstudio.opibuilder.views"
            class="org.csstudio.opibuilder.runmode.OPIView"
            fastViewWidthRatio="0.3"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.opiViewLEFT"
            name="OPI View (Left)">
      </view>
      <view
            allowMultiple="true"
            category="org.csstudio.opibuilder.views"
            class="org.csstudio.opibuilder.runmode.OPIView"
            fastViewWidthRatio="0.3"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.opiViewRIGHT"
            name="OPI View (Right)">
      </view>
      <view
            allowMultiple="true"
            category="org.csstudio.opibuilder.views"
            class="org.csstudio.opibuilder.runmode.OPIView"
            fastViewWidthRatio="0.3"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.opiViewTOP"
            name="OPI View (Top)">
      </view>
      <view
            allowMultiple="true"
            category="org.csstudio.opibuilder.views"
            class="org.csstudio.opibuilder.runmode.OPIView"
            fastViewWidthRatio="0.3"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.opiViewBOTTOM"
            name="OPI View (Bottom)">
      </view>
      <view
            allowMultiple="true"
            category="org.csstudio.opibuilder.views"
            class="org.csstudio.opibuilder.runmode.PlaceHolderView"
            fastViewWidthRatio="0.3"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.placeHolder"
            name="OPI Placeholder">
      </view>
   </extension>

   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.csstudio.opibuilder.editparts.IPVWidgetEditpart"
            class="org.csstudio.opibuilder.editparts.PVWidgetAdapterFactory">
         <adapter
               type="org.csstudio.csdata.ProcessVariable">
         </adapter>
         <adapter
               type="[Lorg.csstudio.csdata.ProcessVariable;">
         </adapter>
      </factory>
   </extension>
   <extension point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="opi"
            id="org.csstudio.iter.xmleditor.content.opi"
            name="OPI Files"
            priority="low" />
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="false"
            extensions="opi"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.DisplayLauncher"
            launcher="org.csstudio.opibuilder.runmode.DisplayLauncher"
            name="OPI Runner">
      </editor>
      <!--editor
            default="false"
            extensions="opi"
            icon="icons/file_opi.png"
            id="org.csstudio.opibuilder.ShellLauncher"
            launcher="org.csstudio.opibuilder.runmode.ShellLauncher"
            name="OPI Runner (New Window)">
      </editor-->
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="css"
               visible="true">
         </separator>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=css">
         <command
               commandId="org.csstudio.opibuilder.openProbeOPI"
               icon="icons/probe-16.png"
               label="Probe"
               style="push">
            <visibleWhen>
               <or>
                  <with variable="activeMenuSelection">
                     <iterate>
                        <adapt type="org.csstudio.csdata.ProcessVariable"/>
                     </iterate>
                     <and>
                        <count value="+"/>
                     </and>
                  </with>
                  <with
                        variable="activeMenuSelection">
                     <iterate>
                        <adapt
                              type="[Lorg.csstudio.csdata.ProcessVariable;">
                        </adapt>
                     </iterate>
                     <and>
                        <count value="+"/>
                     </and>
                  </with>
               </or>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
